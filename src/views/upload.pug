extends base

block content 
   if errorMessage 
      span=errorMessage
   form(method = "POST")
      input(name="title",placeholder="Title", required, type="test", maxlength=100)
      input(name="description",placeholder="Description", required, type="test", maxlength=240)
      input(name="hashtags",placeholder="Hashtags, seperated by comma.", required, type="test")
      input(type="submit", value="Upload Video")